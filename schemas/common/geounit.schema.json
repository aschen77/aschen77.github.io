{
    "id": "geounit.schema.json",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "type": "object",
    "title": "Geographical Unit",
    "description": "The geographical unit of a parent geographical unit.",
    "meta:xdmType": "object",
    "properties": {
        "_id": {
            "title": "Identifier",
            "type": "string",
            "format": "uri",
            "description": "The ID associated with this geographical unit.",
            "meta:xdmType": "string",
            "meta:xdmField": "@id",
            "tagNumber": 1
        },
        "label": {
            "title": "Label of the geographical unit.",
            "type": "string",
            "description": "The user-friendly name for the geographical unit.",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:label",
            "tagNumber": 2
        }
    },
    "meta:xdmId": "https://ns.adobe.com/xdm/common/geounit",
    "meta:altId": "_xdm.common.geounit",
    "required": [
        "_id"
    ]
}
